{
  "api": "/api/restaurant/filter/foodCategory",
  "method": "post",
  "inputType": "application/json",
  "input": {
    "areaId": "integer (اختیاری، آیدی عددی منطقه)",
    "foodCategoryId": "integer (الزامی، آیدی عددی دسته‌بندی غذا)"
  },
  "output": [
    {
      "status": "success",
      "message": "رستوران‌ها بر اساس دسته‌بندی غذا فیلتر شدند.",
      "data": [
        {
          "id": "integer",
          "name": "string",
          "description": "string",
          "isActive": "boolean",
          "startWorkHour": "integer (0-23)",
          "endWorkHour": "integer (0-23)",
          "ratingAvg": "decimal",
          "ratingCount": "integer (تعداد رأی‌ها)",
          "cityName": "string (نام شهر)",
          "cityId": "integer (آیدی شهر)",
          "areas": [
            {
              "id": "integer (آیدی منطقه)",
              "name": "string (نام منطقه)"
            }
          ],
          "deliveryFeeBase": "decimal (هزینه پایه ارسال)"
        }
      ],
      "statusCode": 200
    },
    {
      "status": "error",
      "message": "آیدی دسته‌بندی غذا ارسال نشده است.",
      "statusCode": 400
    }
  ]
}
